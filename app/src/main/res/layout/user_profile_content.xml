<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_block_size"
            android:background="@color/grey"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rating"
                style="@style/head_text_block"
                android:layout_weight="0.3"
                android:text="@string/head.block.rating"/>
            <View
                android:layout_width="@dimen/line_divider"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/code_lines"
                style="@style/head_text_block"
                android:layout_weight="0.4"
                android:text="@string/head.block.writecode"/>
            <View
                android:layout_width="@dimen/line_divider"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/projects"
                style="@style/head_text_block"
                android:layout_weight="0.3"
                android:text="@string/head.block.projects"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginTop="@dimen/size_very_small_8"
            android:layout_marginBottom="@dimen/size_very_small_8"
            android:orientation="horizontal">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"/>
            <LinearLayout
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint.userphone"
                        android:inputType="phone"
                        android:text="@string/user.phone"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/call_img"
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/size_large_72">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginTop="@dimen/size_very_small_8"
            android:layout_marginBottom="@dimen/size_very_small_8"
            android:orientation="horizontal">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"/>
            <LinearLayout
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint.usermail"
                        android:inputType="textEmailAddress"
                        android:text="@string/user.mailaddress"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/send_mail_img"
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/size_large_72">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginTop="@dimen/size_very_small_8"
            android:layout_marginBottom="@dimen/size_very_small_8"
            android:orientation="horizontal">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk_circle"/>
            <LinearLayout
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_vk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint.vk_account"
                        android:inputType="textUri"
                        android:text="@string/user.vk"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/show_vk_img"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/size_large_72">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginTop="@dimen/size_very_small_8"
            android:layout_marginBottom="@dimen/size_very_small_8"
            android:orientation="horizontal">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>
            <LinearLayout
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_git"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint.repogit"
                        android:inputType="textUri"
                        android:text="@string/user.git"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/show_git_img"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/size_large_72">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginTop="@dimen/size_very_small_8"
            android:orientation="horizontal">
            <ImageView
                style="@style/icon.left"
                android:layout_gravity="top|left"
                android:src="@drawable/ic_account_circle_black_24dp"/>
            <LinearLayout
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint.bio"
                        android:inputType="text"
                        android:text="@string/user.bio"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>