<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@drawable/login_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/zero_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/light_red"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/zero_size"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginTop="@dimen/size_larger_96"
            android:layout_marginBottom="@dimen/size_larger_96"
            android:background="@color/green">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:background="@color/white"
                android:text="ВОЙТИ"
                android:enabled="false"
                android:textColor="@color/red"
                android:textSize="32sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_very_small_8"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:background="@color/yellow"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:hint="E-mail"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_very_small_8"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:background="@color/yellow"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:hint="Пароль"
                android:background="@color/white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:background="@color/white"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="@dimen/size_larger_96"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:text="ВОЙТИ"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_very_small_8"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:background="@color/yellow"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginLeft="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_small_24"
                android:layout_marginBottom="@dimen/size_small_24"
                android:background="@color/white"
                android:hint="Забыли пароль?"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/zero_size"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/light_red"/>
    </LinearLayout>

</RelativeLayout>