<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_size"
    android:paddingTop="@dimen/size_small_24"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/size_very_small_8"
    android:background="@drawable/header_bkg">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:src="@drawable/avatar"
        android:layout_marginTop="@dimen/spacing_normal_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drawer.header.user.name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drawer.header.user.mail"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>