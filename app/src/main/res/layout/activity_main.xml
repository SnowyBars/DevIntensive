<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_size"
                android:scaleType="centerCrop"
                android:src="@drawable/userphoto"
                android:fitsSystemWindows="true"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:theme="@style/AppTheme.PopupOverlay"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                android:titleTextColor="@color/white"
                app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/head_text_block"
                        android:layout_weight="0.3"
                        android:text="@string/rating"/>
                    <View
                        android:layout_width="@dimen/line_divider"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>
                    <TextView
                        style="@style/head_text_block"
                        android:layout_weight="0.4"
                        android:text="@string/write_code"/>
                    <View
                        android:layout_width="@dimen/line_divider"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>
                    <TextView
                        style="@style/head_text_block"
                        android:layout_weight="0.3"
                        android:text="@string/projects"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginTop="@dimen/size_very_small_8"
                    android:layout_marginBottom="@dimen/size_very_small_8"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16"
                        android:orientation="vertical">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/user_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Мобильный телефон"
                                android:inputType="phone"
                                android:text="+7(999)999-99-99"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusable="false"
                                android:background="@android:color/transparent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divider"
                    android:background="@color/light_grey"
                    android:layout_marginLeft="@dimen/size_large_72">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginTop="@dimen/size_very_small_8"
                    android:layout_marginBottom="@dimen/size_very_small_8"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/user_mail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="E-mail"
                                android:inputType="textEmailAddress"
                                android:text="mail@mail.ru"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusable="false"
                                android:background="@android:color/transparent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divider"
                    android:background="@color/light_grey"
                    android:layout_marginLeft="@dimen/size_large_72">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginTop="@dimen/size_very_small_8"
                    android:layout_marginBottom="@dimen/size_very_small_8"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/user_vk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Профиль в VK"
                                android:inputType="textUri"
                                android:text="vk.com/id116391716"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusable="false"
                                android:background="@android:color/transparent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divider"
                    android:background="@color/light_grey"
                    android:layout_marginLeft="@dimen/size_large_72">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginTop="@dimen/size_very_small_8"
                    android:layout_marginBottom="@dimen/size_very_small_8"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/user_git"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Репозиторий"
                                android:inputType="textUri"
                                android:text="github.com/SnowyBars/DevIntensive"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusable="false"
                                android:background="@android:color/transparent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divider"
                    android:background="@color/light_grey"
                    android:layout_marginLeft="@dimen/size_large_72">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginTop="@dimen/size_very_small_8"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/icon.left"
                        android:layout_gravity="top|left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/user_bio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="О себе"
                                android:inputType="text"
                                android:text="Здесь будет находится информация пользователя"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusable="false"
                                android:background="@android:color/transparent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
            </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>
        
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
